<body>

    <div>
          <div class="cardTwo">

      <div class="container">
        <h2>Subjects Taught By Each Teacher</h2>
        <form action="/assign" method="post">
          
        <select name="teacher_name" id="">
              {{#each teachers}}
            <option value="{{id}}">{{first_name}} {{last_name}} </option>
            {{/each}}
        </select>

        <select name="subject_name" id="">
            {{#each subjects}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
        </br>
          <input id="submit" type="submit" value="Submit" />
        </form>
      </div>
  </div>
  </div>
    {{#if messages.info}}
    <div class="flash">
      {{messages.info}}
    </div>
    {{/if}}
    <div>
        <table>
            <tr>
                
              <th>Teachers Names</th>
          
              <th>Subject for each teacher</th>
              <th>count</th>
            
             
            </tr>
            {{#each teachers}}
            <tr>
              <td>{{first_name}} {{last_name}}</td>

              <td>
               
                 {{#each subjects}}
                <ul>
                  <li><a href="/teacher_for_subject/{{name}}">{{this.name}}</a></li>
                </ul>
          {{/each}}
               
              </td>

              <td class="count">{{count}}</td>

            </tr>
            {{/each}}
      
          </table>

        
    </div>
