<style>

.card {
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
      transition: 0.3s;
      width: 40%;
      margin-left: auto;
      margin-right: auto;
      margin-top: 100px;
      margin-bottom: auto;
      
    }
    
    .card:hover {
      box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }
    
    .container {
      padding: 2px 16px;
    }
    .btn{
        background-color:#333; 
        border-radius: 20%;
        color: white;
        text-align: center;
        display: inline-block;
        font-size: 24px;
        font-weight: bolder;
        margin: 4px 2px;
        cursor: pointer;
  
    }
    .flash {
    text-align: center;
    margin: 20px;
    font-size: 25px;
    border: #1aed14 1px solid;
    background: #ddddaf;
}

table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 95%;
  margin-left: auto;
 margin-right: auto;
 margin-top: 20px;
}

td, th {
  border: 1px solid rgba(23, 151, 180, 0.763);
  text-align: left;
  padding: 8px;
  width: 50%;
}

tr:nth-child(even) {
  background-color: rgba(23, 151, 180, 0.763);
}
.addSub {
  margin-left: 18px;
}
input {
  width: 300px;
  height:27px;
}
h2 {
  text-align: center;
}
</style>
{{#if messages.info}}
    <div class="flash">
      {{messages.info}}
    </div>
    {{/if}}
<div class="main" >
    <div class="card">
        <div class="container">
          <div><h2>List of subjects</h2></div>
            {{!-- <div class="">
                 <ul>
                {{#each subject}}
                <li>{{name}}</li>
               <div>
                   <a href="/del_subject/{{id}}" type="submit" > clear </a>
               </div>

                {{/each}}
              </ul>  
            </div> --}}
            <div>
              <table>
                <tr>
                  <th>Subject</th>
                  <th>Action</th>
                </tr>
                {{#each subject}}
                <tr>
                  <td>{{name}}</td>
                  <td><a href="/del_subject/{{id}}" type="submit" > clear </a></td>
                </tr>
                {{/each}}
              </table>
            </div>
            
         <div class="" >
            <form action="/add_subject" method="Post">
           
             <div class="addSub">
             <input type="text" name="name" placeholder="New subject" value={{name}}> 
             <button class="btn" type="submit" >+</button>
             
            </div>

            </form>
         </div>
        </div>
      </div>
     

</div>
    