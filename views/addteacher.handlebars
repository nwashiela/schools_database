<style>

  .card { box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s; width: 40%;
  margin-left: auto; margin-right: auto; } .card:hover { box-shadow: 0 8px 16px
  0 rgba(0,0,0,0.2); } .container { padding: 2px 16px; } input[type=submit] {
  background-color: black; color: white; } h2{ text-align: center; } .container{
  text-align: center; } table { font-family: arial, sans-serif; border-collapse:
  collapse; width: 70%; margin-left: auto; margin-right: auto; } td, th {
  border: 1px solid rgba(23, 151, 180, 0.763); text-align: left; padding: 8px;
  width: 50%; } tr:nth-child(even) { background-color: rgba(23, 151, 180,
