<div class="containers">
  <h2>Add Teachers</h2>

  <div class="card">
    <div class="container">
      <form action="">
        <input
          type="text"
          id="fname"
          name="fname"
          placeholder="first-name"
        /><br /><br />
        <input type="text" id="fname" name="fname" placeholder="last-name" /><br
        /><br />
        <input type="text" id="lname" name="lname" placeholder="email" /><br
        /><br />
        <input type="submit" value="Submit" />
      </form>
    </div>
  </div>
  <h1>{{ last_name }}</h1>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>action</th>
    </tr>
    {{#each this}}
    <tr>
        <td>{{ first_name }}</td>
        <td>{{ last_name }}</td>
        <td>{{ email }}</td>
    </tr>
    {{/each}}

  </table>

</div>