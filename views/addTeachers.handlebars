<div class="containers">
  <h2>Add Teachers</h2>

     {{#if messages.info}}
    <div class="flash">
      {{messages.info}}
    </div>
    {{/if}}

  <div class="card">
    <div class="container">
      <form action="/add_teacher" method="post">
        <input type="text" name="first_name" placeholder="first-name" /><br
        /><br />
        <input type="text" name="last_name" placeholder="last-name" /><br /><br
        />
        <input type="text" name="email" placeholder="email" /><br /><br />
        <input type="submit" value="Submit" />
      </form>
    </div>
  </div>

  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>action</th>
    </tr>
    {{#each teachers}}
      <tr>
        <td> {{first_name}}</td>
        <td> {{last_name}} </td>
        <td> {{email}} </td>
        <td>
      
          <a href="/del_teacher/{{id}}" type="submit" >Delete</a>

        </td>
      </tr>
    {{/each}}

  </table>

</div>